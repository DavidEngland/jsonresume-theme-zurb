{{#if resume.awards.length}}
  <div id="awards">
    <h2>Awards</h2>
    {{#each resume.awards}}
      <div class="row">
        <div class="callout-card radius success">
          <div class="row">
            <div class="callout-card-content">
              <div class="row">
                {{#if title}}
                  <div class="small-12 medium-6 large-6 columns">
                    {{title}}
                  </div>
                {{/if}}
                {{#if awarder}}
                  <div class="small-12 medium-4 large-4 columns">
                    from: {{awarder}}
                  </div>
                {{/if}}
                {{#if date}}
                  <div class="dates small-12 medium-2 large-2 columns">
                    {{prettifyDate date}}
                  </div>
                {{/if}}
              </div>
              {{#if summary}}
                <div class="row">
                  <div class="small-12 medium-12 large-12 columns">
                    <p class="summary">{{summary}}</p>
                  </div>
                </div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
  </div>
  {{/each}}
  </div>
{{/if}}
