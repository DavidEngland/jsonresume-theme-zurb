{{#if resume.awards.length}}

  <div id="awards">
    <h2>Awards</h2>
    {{#each resume.awards}}
      <div class="row">
        <div class="callout-card radius primary">
          <div class="row">
            <div class="callout-card-content">
              <div class="row">
                {{#if title}}
                  <div class="small-12 medium-4 large-4 columns">
                    {{title}}
                  </div>
                {{/if}}
                {{#if awarder}}
                  <div class="small-12 medium-4 large-4 columns">
                    {{awarder}}
                  </div>
                {{/if}}
                {{#if date}}
                  <div class="small-12 medium-4 large-4 columns">
                    {{date}}
                  </div>
                {{/if}}
              </div>
              {{#if summary}}
                <div class="row">
                  <div class="summary small-12 medium-12 large-12 columns">
                    <p class="lead summary">{{summary}}</p>
                  </div>
                </div>
              {{/if}}
            </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

{{/if}}
