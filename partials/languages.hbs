{{#if resume.languages.length}}
  <div id="languages" class="row">
    <h2>Languages</h2>
    <div class="row">
      {{#each resume.languages}}
        <div class="small-6 large-6 columns">
          <button class="hollow button secondary">
            {{#if language}}
              <div class="language">
                {{language}}
              </div>
            {{/if}}
            {{#if fluency}}
              <div class="fluency">
                {{fluency}}
              </div>
            {{/if}}
          </button>
        </div>
      {{/each}}
    </div>
  </div>
{{/if}}
